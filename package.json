{
    "name": "hudorosu-backend",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "packages/*",
        "shared"
    ],
    "scripts": {
        "install:all": "npm install",
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:lp\"",
        "dev:backend": "npm run dev --workspace=@hudorosu/backend",
        "dev:frontend": "npm run dev --workspace=@hudorosu/frontend",
        "dev:lp": "npm run dev --workspace=@hudorosu/lp",
        "dev:mobile": "npm start --workspace=@hudorosu/mobile",
        "build": "npm run build:shared && npm run build:backend && npm run build:frontend && npm run build:lp",
        "build:shared": "npm run build --workspace=@hudorosu/shared",
        "build:backend": "npm run build --workspace=@hudorosu/backend",
        "build:frontend": "npm run build --workspace=@hudorosu/frontend",
        "build:lp": "npm run build --workspace=@hudorosu/lp"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    },
    "overrides": {
        "@types/react": "18.2.73",
        "@types/react-dom": "18.2.19"
    }
}