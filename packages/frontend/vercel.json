{
  "buildCommand": "cd ../.. && npm install --include=dev && npm run build:shared && cd packages/frontend && npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "installCommand": "cd ../.. && npm install --include=dev",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
